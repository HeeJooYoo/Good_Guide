<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >
        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_makeact_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="13dp">
                        <EditText
                            android:layout_weight="2"
                            android:id="@+id/etID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint=" 아이디를 입력해 주세요"
                            android:textSize="15sp"
                            android:padding="10dp"
                            android:background="@drawable/edit_edge2"
                            android:layout_marginRight="5dp"
                            android:singleLine="true" />
                        <Button
                            android:id="@+id/btnValidate"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="중복체크"
                            android:textSize="15sp"
                            android:background="#1BCEC5"
                            android:textColor="#FFFFFF"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_makeact_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/etPW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" 비밀번호를 입력해 주세요"
                    android:textSize="15sp"
                    android:background="@drawable/edit_edge2"
                    android:layout_marginBottom="13dp"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/tv_makeact_repw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 재확인"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"
                    />
                <EditText
                    android:id="@+id/etPWCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" 비밀번호를 다시 입력해 주세요"
                    android:textSize="15sp"
                    android:background="@drawable/edit_edge2"
                    android:padding="10dp"
                    android:layout_marginBottom="13dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/tv_makeact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" 이름을 입력해 주세요"
                    android:textSize="15sp"
                    android:background="@drawable/edit_edge2"
                    android:layout_marginBottom="13dp"
                    android:padding="10dp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/tv_makeact_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/etNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" '-'을 제외하고 입력해 주세요"
                    android:textSize="15sp"
                    android:background="@drawable/edit_edge2"
                    android:layout_marginBottom="13dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/tv_makeact_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="주소"
                    android:textColor="#000000"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" 주소를 입력해 주세요"
                    android:textSize="15sp"
                    android:background="@drawable/edit_edge2"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:singleLine="true"
                    />
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_main_color"
                    android:text="회원가입"
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>
        </LinearLayout>
</LinearLayout>