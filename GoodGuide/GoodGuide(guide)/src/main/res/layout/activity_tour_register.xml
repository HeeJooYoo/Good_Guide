<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.example.user.goodguide.TourRegisterActivity">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="투어 이름"
                android:layout_marginBottom="8dp"
                android:textStyle="normal|bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtTourName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:hint="투어 이름을 입력해 주세요"
                android:padding="8dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ed_line"
                android:textColorHint="@android:color/darker_gray"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:text="투어 지역"
                android:layout_marginBottom="10dp"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtCountry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ed_line"
                    android:hint="투어 나라명을 입력"
                    android:textColorHint="@android:color/darker_gray"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/edtCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ed_line"
                    android:hint="투어 도시명을 입력"
                    android:textColorHint="@android:color/darker_gray"
                    android:singleLine="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소요 시간"
                android:layout_marginBottom="10dp"
                android:textStyle="normal|bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edtEstTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:inputType="number"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ed_line"
                android:hint="투어에 소요되는 시간을 입력해주세요"
                android:textColorHint="@android:color/darker_gray"
                android:singleLine="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/textView13"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    android:text="인원" />

                <EditText
                    android:id="@+id/edtMinNum"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ed_line"
                    android:hint="최소인원 입력"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:textColorHint="@android:color/darker_gray"
                    app:layout_constraintStart_toEndOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/edtMaxNum"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ed_line"
                    android:hint="최대인원 입력"
                    android:inputType="number"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    android:text="가격"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/edtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ed_line"
                    android:hint="투어에 필요한 금액을 입력해주세요"
                    android:textColorHint="@android:color/darker_gray"
                    android:singleLine="true"
                    android:inputType="number"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:text="만나는 시간"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/edtMeetTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ed_line"
                android:hint="만나는 시간을 입력해주세요"
                android:singleLine="true"
                android:textColorHint="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:text="만나는 장소"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/img_map1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/map"/>
                <EditText
                    android:id="@+id/edtMeetPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/ed_line"
                    android:hint="만나는 장소를 입력해주세요"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/img_cmr1"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/cmr"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="만나는 장소의 지도 사진을 추가해주세요."
                android:gravity="center"/>
            <View
                android:background="#c4c4c4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_detail"
                android:background="#dfdfdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textColor="#717171"
                android:text="코스 소개"
                android:gravity="left"
                android:textSize="17dp"
                android:padding="20dp"
                />

            <View
                android:background="#c4c4c4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/button4"
                android:background="@drawable/btn_main_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="등록"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
